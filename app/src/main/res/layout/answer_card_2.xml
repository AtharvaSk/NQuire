<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/all_answer_profile_pic"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_profile_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/all_answer_profile_pic"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/all_answer_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aditya Gunjal"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/all_answer_update_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="12 hrs ago"
                            android:textColor="@color/grey"
                            android:textSize="13sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/card_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer Goes Here ..."
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType = "center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/card_upvote"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="@drawable/ic_upvote_icon" />

                                <TextView
                                    android:id="@+id/all_answer_like"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="7dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/card_downvote"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="@drawable/ic_downvote_icon"/>

                                <TextView
                                    android:id="@+id/all_answer_dislike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="7dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/card_comment"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="@drawable/ic_comment_icon" />

                                <TextView
                                    android:id="@+id/all_answer_comments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="0 comments"
                                    android:layout_marginLeft="7dp"/>

                            </LinearLayout>


                            <ImageView
                                android:id="@+id/card_more_button"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/ic_more_icon" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>